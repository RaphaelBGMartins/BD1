@{
    String mensagem = Request.QueryString["mensagem"];
    if (mensagem != null) {
        <a id="pass_msg" hidden>@mensagem</a>
        <script>
            var msg
            msg = document.getElementById("pass_msg").innerText
            window.alert(msg)
        </script>
    }
}

<div class="jumbotron">
    <div class="row main">
        <div class="main-login main-center">
            <h4 class="text-center"><b>Registre-se</b> e tenha acesso a nossa biblioteca de filmes.</h4>

            <form class="" method="post" action="Att_Cadastro">

                <div class="form-group">
                    <label for="name" class="cols-sm-2 control-label">Nome *</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <input name="nome" class="form-control bg-light" placeholder="Entre com o seu nome" type="text" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="name" class="cols-sm-2 control-label">Email *</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                        </div>
                        <input name="email" lass="form-control bg-light" placeholder="Entre com seu email" type="email" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="name" class="cols-sm-2 control-label">CPF *</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input name="cpf" class="form-control bg-light" placeholder="Entre com o seu CPF" type="number" min="0" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="name" class="cols-sm-2 control-label">Ano de Nascimento *</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-calendar"></i> </span>
                        </div>
                        <input name="ano" class="form-control bg-light" placeholder="Ano de Nascimento" type="number" min="1900" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="name" class="cols-sm-2 control-label">Telefone (sem DDD)</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                        </div>
                        <input name="telefone" class="form-control bg-light" placeholder="xxxxx-xxx" type="number" min="0">
                    </div>
                </div>

                <div class="form-group" id="butao">
                    <button type="submit" class="btn btn-info btn-md btn-block login-button">
                        Registrar
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>