@{
    ViewBag.Title = "Login";
}
<div class="jumbotron" id="login">
    <div class="row main">
        <div class="main-login main-center">
            <div class="login-dark p-3 rounded">
                <div class="pt-3">
                    <h2 class="text-white ">Fazer login</h2>
                </div>

                <form class="mt-5">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                            </div>
                            <input name="" class="form-control bg-light" placeholder="Email" type="email">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <input class="form-control bg-light" placeholder="CPF" type="text">
                        </div>
                    </div>

                    <div class="mt-5">
                        <button class="btn btn-sm btn-info col">Entrar</button>
                    </div>

                    <div class="mt-5">
                        <p class="text-white text-center">
                            Não tem uma conta?
                            <a href="cad-user.html" class="text-warning">@Html.ActionLink("Registrar-se", "Cad_Cliente", "Home")</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>